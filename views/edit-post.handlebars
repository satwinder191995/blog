<article class="container">
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <h2>
    Edit Post
  </h2>
  <form class="edit-post-form my-3">
    <div class="row ">
      <lable class="col-5">Type a new title</lable>
      <input class="mx-3" name="post-title" type="text" value="{{post.title}}" />
    </div>
    <div>
      {{post.vote_count}} {{format_plural "point" post.vote_count}} by you on {{format_date post.created_at}}
      |
      <a href="/post/{{post.id}}">{{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button class="mt-2 btn bg-primary" type="submit">Save post</button>
    <button type="button" class="mt-2 delete-post-btn btn bg-primary">Delete post</button>
  </form>
</article>
<aritcle class="container">
<form class="comment-form mx-3">
  <div class="row w-75 m-2">
    <textarea name="comment-body"></textarea>
  </div>

  <div class="mx-2">
    {{> comments post.comments}}
    <button class ="btn bg-primary" type="submit">add comment</button>
  </div>
</form>
</aritcle>
<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>
<script src="/javascript/comment.js"></script>